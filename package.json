{
	"name": "@biscuit/web",
	"description": "Presentation page of the biscuit modules.",
	"author": "biscuitland",
	"private": true,
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"update": "pnpm up --interactive",
		"update:force": "pnpm up --latest",
		"lint:check": "eslint --ext .ts,.tsx,.vue --ignore-path .gitignore .",
		"lint:fix": "eslint --fix --ext .ts,.tsx,.vue --ignore-path .gitignore .",
		"format": "prettier --write ./**/*.{ts,tsx,vue}",
		"postinstall": "nuxt prepare && husky install .husky",
		"update:i": "pnpm up --interactive",
		"update:f": "pnpm up --latest"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@commitlint/config-conventional": "^18.6.2",
		"@commitlint/format": "^18.6.1",
		"@headlessui/vue": "^1.7.19",
		"@nuxt/image": "^1.4.0",
		"@nuxt/image-edge": "1.0.0-testing",
		"@nuxtjs/color-mode": "^3.3.2",
		"@nuxtjs/fontaine": "^0.4.1",
		"@nuxtjs/tailwindcss": "^6.11.4",
		"@tailwindcss/typography": "^0.5.10",
		"@types/prismjs": "^1.26.3",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vue/eslint-config-standard": "^8.0.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-nuxt": "^4.0.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-vue": "^9.22.0",
		"git-cz": "^4.9.0",
		"husky": "^8.0.3",
		"ky": "^1.2.2",
		"lint-staged": "^15.2.2",
		"marked": "^11.2.0",
		"nuxt": "3.10.3",
		"nuxt-icon": "^0.6.9",
		"prettier": "^3.2.5",
		"pretty-quick": "^3.3.1",
		"typescript": "^5.4.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"commitlint": {
		"formatter": "@commitlint/format",
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"webpack",
				"vue",
				"typescript",
				"tailwindcss"
			]
		},
		"allowedDeprecatedVersions": {
			"sourcemap-codec": "*",
			"rollup-plugin-terser": "*",
			"stable": "*"
		}
	},
	"lint-staged": {
		"**/*.{ts,tsx,vue,html,css}": [
			"pnpm lint:fix"
		]
	}
}
